            Button:
                text: "OR-4"
                font_size: 28
                on_press: app.select_room(4)

            Button:
                text: "OR-6"
                font_size: 28
                on_press: app.select_room(6)

            Button:
                text: "OR-7"
                font_size: 28
                on_press: app.select_room(7)

            Button:
                text: "OR-8"
